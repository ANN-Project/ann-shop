            <div class="columnOne areaBox proArea">
                <div class="std">
                    <div class="container zeroNine">
                        <div class="row oneBox">
                            @Html.Raw(GetBannerVerticalHTML(banner_vertical))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
