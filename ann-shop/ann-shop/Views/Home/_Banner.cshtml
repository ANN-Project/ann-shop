@functions{
    public static string GetBannerHorizontalHTML(List<BannerModel> banners)
    {
        var html = new StringBuilder();
        var url = new UrlHelper(HttpContext.Current.Request.RequestContext);

        foreach(var item in banners)
        {
            html.Append("<li class='col-xs-01 col-sm-6 col-xs-6'>");
            html.Append(String.Format("    <a class='areaBox areaBoximg' title='{0}' href='{1}'>", item.image.title, item.url));
            html.Append(String.Format("        <img src='{0}'>", url.Content(item.image.small)));
            html.Append("    </a>");
            html.Append("</li>");
        }

        return html.ToString();
    }

    public static string GetBannerVerticalHTML(List<BannerModel> banners)
    {
        var html = new StringBuilder();
        var url = new UrlHelper(HttpContext.Current.Request.RequestContext);
        var index = 0;

        foreach (var item in banners)
        {
            html.Append("<div class='col-sm-4 col-xs-4'>");
            html.Append("    <div class='banner-image banner-image1'>");

            if (index % 2 == 0)
            {
                html.Append("        <div class='banner-text banner-topt text-center'>");
                html.Append(String.Format("            <h2>{0}</h2>", item.banner_text_1));
                html.Append(String.Format("            <h3>Mua ngay</h3>", item.banner_text_2));
                html.Append("        </div>");

                html.Append("        <div class='banner-image'>");
                html.Append(String.Format("            <a href='{0}' class='areaBoximg'>", item.url));
                html.Append(String.Format("                <img alt='' src='{0}'>", url.Content(item.image.small)));
                html.Append("            </a>");
                html.Append("        </div>");
            }
            else
            {
                html.Append("        <div class='banner-image'>");
                html.Append(String.Format("            <a href='{0}' class='areaBoximg'>", item.url));
                html.Append(String.Format("                <img alt='' src='{0}'>", url.Content(item.image.small)));
                html.Append("            </a>");
                html.Append("        </div>");

                html.Append("        <div class='banner-text banner-topt text-center'>");
                html.Append(String.Format("            <h2>{0}</h2>", item.banner_text_1));
                html.Append(String.Format("            <h3>Mua ngay</h3>", item.banner_text_2));
                html.Append("        </div>");
            }

            html.Append("    </div>");
            html.Append("</div>");

            index += 1;
        }

        return html.ToString();
    }
}

<!-- banner new slide bottom  -->
<div class="f-fix mg10">
