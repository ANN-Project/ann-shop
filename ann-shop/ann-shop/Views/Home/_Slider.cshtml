                small = "http://localhost/ann-shop/images/slider_item_1_image.jpg"
            },
            container = new StringBuilder()
                .Append("<p>Chọn bikini xinh tự tin khoe dáng</p>")
                .Append("<h3>Ưu đãi đến 50%++</h3>")
                .ToString()
        },
        new SliderModel() {
            url = "//haravan.com/?ref=nobita-1",
            image = new ImageModel()
            {
