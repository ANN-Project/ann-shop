@model ann_shop.Models.ArchiveProductModel

<div class="container-wrap homepage-page">
    <div id="content">
        <main class="padding-top-mobile">
            <div class="header-navigate">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <ol class="breadcrumb breadcrumb-arrow">
                                <li><a href="/" target="_self">Trang chủ</a></li>
                                <li><i class="fa fa-angle-right"></i></li>
                                <li><span>Danh mục</span></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <section class="sidebar-col search">
                <div class="container">
                    <div class="row clearfix">
                        <aside class="col-sm-12">
                            <div class="header-collection">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="box-title-collection clearfix">
                                            <h1>
                                                Danh mục sản phẩm
                                            </h1>
                                            <span class="collection-size">(@Model.TotalProduct sản phẩm)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="product-lists box-product-lists clearfix">
                                            <div class="row">
                                                @foreach (var product in Model.Products)
                                                {
                                                    @Html.ANNProd(product, new { @class = "col-md-3 col-sm-4 col-xs-6" });
                                                }
                                            </div>
                                        </div>
                                        <div class="pagination-default clearfix">
                                            <div class="clearfix">
                                                @if (Model.Page > 0)
                                                {
                                                    <a class="next-last fa fa-angle-double-left" href="?page=0"></a>
                                                    <a class="next fa fa-angle-left" href="?page=@(Model.Page - 1)"></a>
                                                }
                                                @for (var i = 0; i < Model.TotalPage; i++)
                                                {
                                                    var page = i + 1;

                                                    if (i == Model.Page)
                                                    {
                                                        <a class="page-node current" href="?page=@i">@page</a>
                                                    }
                                                    else
                                                    {
                                                        <a class="page-node" href="?page=@i">@page</a>
                                                    }
                                                }
                                                @if (Model.Page < Model.TotalPage - 1)
                                                {
                                                    <a class="next fa fa-angle-right" href="?page=@(Model.Page + 1)"></a>
                                                    <a class="next-last fa fa-angle-double-right" href="?page=@(Model.TotalPage - 1)"></a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </aside>
                    </div>
                </div>
            </section>
        </main>
    </div>
</div>
